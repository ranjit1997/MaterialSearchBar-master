<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BrandFragment">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_marginTop="1260dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#D50000"
                android:fontFamily="@string/action_search"
                android:text="BRAND ZONE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                app:cardCornerRadius="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_height="210dp">


                <ImageView

                    android:layout_marginTop="0dp"
                    android:layout_gravity="top"
                    android:src="@drawable/watch"
                    android:layout_width="120dp"
                    android:layout_height="140dp" />
                <TextView
                    android:layout_marginBottom="45dp"
                    android:text="Free Shipping to india"
                    android:textSize="10dp"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/offerlayout_background"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/transparentBlack"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="12dp"
                    android:text="Rs.8402.23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                app:cardCornerRadius="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                android:layout_centerHorizontal="true"
                android:layout_height="210dp">


                <ImageView
                    android:layout_marginTop="0dp"
                    android:layout_gravity="top"
                    android:src="@drawable/earphone"
                    android:layout_width="120dp"
                    android:layout_height="140dp" />
                <TextView
                    android:id="@+id/some"
                    android:layout_marginBottom="45dp"
                    android:text="Free Shipping to india"
                    android:textSize="10dp"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/offerlayout_background"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/transparentBlack"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="12dp"
                    android:text="Rs.8402.23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                app:cardCornerRadius="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_height="210dp">


                <ImageView

                    android:layout_marginTop="0dp"
                    android:layout_gravity="top"
                    android:src="@drawable/ring"
                    android:layout_width="120dp"
                    android:layout_height="140dp" />
                <TextView
                    android:layout_marginBottom="45dp"
                    android:text="Free Shipping to india"
                    android:textSize="10dp"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/offerlayout_background"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/transparentBlack"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="12dp"
                    android:text="Rs.8402.23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>