<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ElectronicsFragment">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_marginTop="988dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#D50000"
                android:fontFamily="@string/action_search"
                android:text="ELECTRONICS &amp; ENTERTAINMENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:ignore="RtlCompat">

            <LinearLayout
                android:id="@+id/b"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_marginLeft="8dp"
                    android:layout_width="330dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="210dp">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="330dp"
                        android:layout_height="210dp"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="@string/action_settings"
                        android:scaleType="centerCrop"
                        android:src="@drawable/electronics" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginLeft="8dp"
                    android:layout_width="330dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="210dp">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="330dp"
                        android:layout_height="210dp"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="@string/action_settings"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mainbose" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginLeft="8dp"
                    android:layout_width="330dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="210dp">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="330dp"
                        android:layout_height="210dp"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="@string/action_settings"
                        android:scaleType="centerCrop"
                        android:src="@drawable/eleimage" />

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>


</FrameLayout>