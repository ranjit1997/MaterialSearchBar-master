<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WeeklyFragment">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_marginTop="745dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#D50000"
                android:fontFamily="@string/action_search"
                android:text="WEEKLY DEALS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                app:cardCornerRadius="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_height="180dp">


                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ring"
                    android:layout_width="120dp"
                    android:layout_height="110dp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/offer_button_background"
                    android:padding="4dp"
                    android:text=" 58.02% OFF "
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp" />
                <TextView
                    android:textColor="@color/transparentBlack"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:text="Rs.8402.23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                app:cardCornerRadius="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                android:layout_centerHorizontal="true"
                android:layout_height="180dp">


                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/earphone"
                    android:layout_width="120dp"
                    android:layout_height="110dp" />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text=" 50% OFF "
                    android:textSize="10dp"
                    android:padding="4dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/offer_button_background"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/transparentBlack"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:text="Rs.8402.23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                app:cardCornerRadius="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_height="180dp">


                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/watch"
                    android:layout_width="120dp"
                    android:layout_height="110dp" />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text=" 30% OFF "
                    android:textSize="10dp"
                    android:padding="4dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/offer_button_background"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/transparentBlack"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:text="Rs.8402.23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>